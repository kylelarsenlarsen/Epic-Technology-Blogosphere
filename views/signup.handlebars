<main class="container h-100 mt-5">
    <div class="row h-100 justify-content-center align-items-center">
        <div class="container w-50">
            <h1>Sign up</h1>
            <p>Have an account? <a href="/login">Sign in!</a></p>
            <form class="mt-4">
                <div class="form-group">
                    <label>Username</label>
                    <input type="text" class="form-control" id="signupName">
                </div>
                <div class="form-group">
                    <label>Email</label>
                    <input type="text" class="form-control" id="signupEmail">
                </div>
                <div class="form-group">
                    <label>Password</label>
                    <input type="password" class="form-control" id="signupPassword">
                </div>
                <button type="submit" class="bg-primary text-white my-3" id="signupBtn">Submit</button>
            </form>
        </div>
    </div>
</main>

