<div class="mx-4 p-4">
    {{#each posts as |post|}}
    <card class="m-3 h-25 d-inline-block w-95 border-4 border">
        <div class="d-flex bg-secondary text-white m-1 py-3">
            <div class="mx-2">{{title}}</div>
            <a class="a ms-auto text-white mx-4" href="/post/{{id}}">View Post</a>
            <div class="mx-2">Created {{format_date date_created}} by {{user.username}}</div>
        </div>
        <div class="d-flex m-3">{{content}}</div>
    </card>
    {{/each}}
</div>